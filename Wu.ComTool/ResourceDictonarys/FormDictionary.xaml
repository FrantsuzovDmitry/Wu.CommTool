<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:hc="https://handyorg.github.io/handycontrol">

    <!--  表单文本框  -->
    <Style x:Key="FormTextBox"
           BasedOn="{StaticResource TextBoxExtend}"
           TargetType="TextBox">
        <Setter Property="hc:InfoElement.TitleWidth" Value="80" />
        <Setter Property="hc:InfoElement.TitlePlacement" Value="Left" />
        <Setter Property="Margin" Value="5" />
    </Style>


    <!--  表单日期选择器  -->
    <Style x:Key="FormDatePicker"
           BasedOn="{StaticResource DatePickerExtend}"
           TargetType="DatePicker">
        <Setter Property="hc:InfoElement.TitleWidth" Value="80" />
        <Setter Property="hc:InfoElement.TitlePlacement" Value="Left" />
        <Setter Property="Margin" Value="5" />
    </Style>

    <!--  表单ComboBox  -->
    <Style x:Key="FormComboBox"
           BasedOn="{StaticResource ComboBoxExtend}"
           TargetType="ComboBox">
        <Setter Property="hc:InfoElement.TitleWidth" Value="80" />
        <Setter Property="hc:InfoElement.TitlePlacement" Value="Left" />
        <Setter Property="Margin" Value="5" />
    </Style>
</ResourceDictionary>